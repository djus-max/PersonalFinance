#:kivy 2.0.0

<BoxDetail>:
    id: box
    padding: 3
    spacing: 0
    elevation: 18
    #on_release: root.detail_article_screen(app.manager)
    canvas.before:
        Color:
            rgba: GeneralColor.white  
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [(20.0, 20.0), (20.0, 20.0), (20.0, 20.0), (20.0, 20.0)]


<AccountBoxDetail>:
    size_hint_y: None
    height: 50
    spacing: 5

    LabelIconButton:
        id: first_label
    LabelDetail:
        id: second_label
    LabelDetail:
        id: third_label


<TransferBoxDetail>:
    size_hint_y: None
    height: 50
    spacing: 5
    on_release: app.manager.new_screen_transition( EventControl.add_transfer_screen, 'AddTransferScreen' , 'old', data_for_query=self.data) #EventControl.all_account_screen.detail_transfer_screen(self.data)
    LabelDetail:
        id: date_label
    LabelIcon:
        id: first_label
    LabelDetail:
        id: second_label
    LabelIcon:
        icon: "arrow-right"
        text_color: GeneralColor.bright_red
    LabelIcon:
        id: fourth_label
    LabelDetail:
        id: fifth_label
    LabelDetail:
        id: sixth_label


<LabelDetail@MDLabel>:
    markup: True
    halign: "center"
    valign: 'middle'
    shorten: True
    shorten_from: 'right'
    #text_size: self.width, None
    size: self.texture_size
    theme_text_color: "Custom"
    text_color: GeneralColor.text_color_global
    font_size: '14sp'
    size: self.texture_size


<LabelIcon@MDIcon>:
    size_hint_x: None
    size: self.texture_size
    halign: "center"
    theme_text_color: 'Custom'
    font_size: '18dp' 


<LabelIconButton@MDIconButton>:
    ripple_scale: 0
    icon: root.icon
    pos_hint: {"center_x":0.5,"center_y":0.5}
    elevation_normal: 3
    text_color: GeneralColor.white
    md_bg_color: GeneralColor.white
    theme_text_color: "Custom"
    user_font_size: "18sp"
    #md_bg_color: root.icon_color_bg
