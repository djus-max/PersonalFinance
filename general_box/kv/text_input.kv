#:kivy 2.0.0

<TextInputCategory>:
    hint_text_color: 1,0,1,1
    current_hint_text_color: 0, 0, 0, 1
    valign: 'middle'
    multiline: True
    max_text_length: 50
    helper_text: ""
    padding: 60, 40
    #helper_text_mode: "on_error"
    line_color_normal: 0, 0, 0, 1
    line_color_focus: 0, 0, 0, 1
    error_color: 1, 0, 0, 1
    error: False
    color_mode: 'custom'


<TextInputSumma>:
    focus: True
    halign: 'center'
    text_color_normal: 0, 0, 0, 1
    text_color_focus: 0, 0, 0, 1
    helper_text_mode: "on_error"
    line_color_normal: 0, 0, 0, 1
    line_color_focus: 0, 0, 0, 1
    current_hint_text_color: 0, 0, 0, 1
    input_filter: 'int'
    error_color: 1, 0, 0, 1
    color_mode: 'custom'
    error: False


<TextInputComent>:
    hint_text: 'коментарий'
    hint_text_color: 1,0,1,1
    current_hint_text_color: 0, 0, 0, 1
    valign: 'middle'
    multiline: True
    helper_text: ""
    padding: 60, 40
    helper_text_mode: "on_error"
    line_color_normal: 0, 0, 0, 1
    line_color_focus: 0, 0, 0, 1
    color_mode: 'custom'
