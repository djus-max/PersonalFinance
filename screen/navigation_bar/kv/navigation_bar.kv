#:kivy 2.0.0
# screen.navigation_bar.py

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height
        MDIcon:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            icon: "account"
    MDLabel:
        text: "KivyMD library"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]
    MDLabel:
        text: "kivydevelopment@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]
    ScrollView:
        DrawerList:
            id: md_list


# Menu item in the DrawerList list.
<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.transition_screen(self, app)
    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
